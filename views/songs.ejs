<% include partials/header %>
<div class="container">
        <div class="row">
            <div class="col s12 m4 l2"><p> </p></div>
            <div class="col s12 m4 l8">
                <div class="searchContainer">
                    <form action="/songs" method="GET">
                        <div class="col-md-1 col-md-offset-1"><h5>Rechercher :</h5></div>
                        <select name="selection" class="browser-default">
                            <option id="title" name="title" value="title">Titre</option>
                            <option id="album" name="album" value="album">Album</option>
                            <option id="artist" name="artist" value="artist">Artiste</option>
                            <option id="year" name="year" value="year">Année</option>
                            <option id="bpm" name="bpm" value="bpm">BPM</option>
                        </select>
                        <div class="col-md-4">
                            <input type="text" name="value" class="form-control" required placeholder="Critère"/>
                        </div>
                        <div class="col-md-2">
                            <input type="submit" class="btn btn-success" value="Rechercher"/>
                        </div>
                    </form>
                    <br/>
                    <div class="col-md-2">
                        <% if (user_admin) { %>
                        <div class="col-md-4 col-md-offset-4">
                            <a class="waves-effect waves-light btn" href="/songs/add">Ajouter une musique</a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
            <div class="col s12 m4 l2"><p></p></div>
        <div class="row">
            <div class="col s12 m4 l2"><p></p></div>
            <div class="col s12 m4 l8"><p><h5><%= nbSongs %> musique(s) trouvée(s)</h5></p></div>
            <div class="col s12 m4 l2"><p></p></div>
        </div>
        <div class="row">
            <div class="col s12 m4 l2"><p></p></div>
            <div class="col s12 m4 l8">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Album</th>
                        <th>Artist</th>
                        <th>Year</th>
                        <th>BPM</th>
                    </tr>
                    <% songs.forEach(function(song) {%>
                    <tr>
                        <td>
                            <a href="/songs/<%=song._id%>"><%=song.title%></a>
                        </td>
                        <td><%=song.album%></td>
                        <td><%=song.artist%></td>
                        <td>
                            <% if (song.year) { %><%=song.year%><% } %>
                        </td>
                        <td>
                            <% if (song.bpm) { %><%=song.bpm%><% } %>
                        </td>
                    </tr>
                    <% }) %>
                    </thead>
                </table>
            </div>
            <div class="col s12 m4 l2"><p></p></div>
        </div>
</div>

